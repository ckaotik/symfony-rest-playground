{% extends 'base.html.twig' %}

{% block title %}{{ 'Products'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'Products'|trans }}</h1>

    <section class="admin container">
        <h2>{{ 'Administration'|trans }}</h2>
        {% block add %}
            <a href="{{ path('app_product_new') }}" class="button">âž• {{ 'Create new'|trans }}</a>
        {% endblock %}
    </section>

    {% block products %}
        <section class="grid">
            {% for product in products %}
                {% include 'component/product-card.html.twig' with {
                    product: product,
                    cartId: cart.id,
                    cssClass: 'col col--4',
                } only %}
            {% else %}
                <p class="col">
                    {{ 'There are no products yet.'|trans }}
                </p>
            {% endfor %}
        </section>
    {% endblock %}
{% endblock %}
