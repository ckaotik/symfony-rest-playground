<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {% block stylesheets %}{% endblock %}

        {% block javascripts %}
{% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        {% block messages %}
            {% include 'component/messages.html.twig' with {
                flashMessages: app.flashes,
            } only %}
        {% endblock %}
        {% block header %}
            <navigation class="container">
                <ul class="inline-list">
                    <li style="display: inline-block;"><a href="{{ path('home') }}">Homepage</a></li>
                    <li style="display: inline-block;"><a href="{{ path('app_product_index') }}">Products</a></li>
                    <li style="display: inline-block;"><a href="{{ path('app_cart_index') }}">Carts</a></li>
                </ul>
            </navigation>
        {% endblock %}
        <div class="container">
            {% block body %}{% endblock %}
        </div>
    </body>
</html>
